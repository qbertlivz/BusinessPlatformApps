    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageaccountname": {
            "defaultValue": "ststorage",
            "type": "String"
        },
	
		"resourcegroup": {
		"defaultValue": "stresourcegroup",
		"type": "string"
		},	
		
		"subscription": {
		"defaultValue": "idrequired",
		"type": "string"
		},
		
	    "CognitiveServiceName": {
		"defaultValue": "CognitiveService",
		"type": "string"
		}
    },
    "variables": {},
    "resources": [
      {
        "comments": "",
        "type": "Microsoft.CognitiveServices/accounts",
